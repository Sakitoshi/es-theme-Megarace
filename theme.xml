<theme>

	<formatVersion>4</formatVersion>

	<view name="system, basic, detailed, video">

		<image name="background_color" extra="true">
			<path>./_inc/images/background.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>FFFFFF</color>
		</image>

		<helpsystem name="help">
			<pos>0.014 0.96</pos>
			<textColor>FFFFFF</textColor>
			<iconColor>FFFFFF</iconColor>
			<fontPath>./_inc/fonts/FSEX300.ttf</fontPath>
			<fontSize>0.033</fontSize>
		</helpsystem>

		<carousel name="systemcarousel">
			<color>340844BF</color>
		</carousel>

		<text name="systemInfo">
			<backgroundColor>9641597F</backgroundColor>
			<color>FFFFFF</color>
			<pos>0 0.615</pos>
			<fontPath>./_inc/fonts/Bauhaus-Light.otf</fontPath>
			<fontSize>0.04</fontSize>
		</text>

	</view>

	<view name="basic">

			<image name="logo">
				<origin>0.5 0.5</origin>
				<pos>0.5 0.12</pos>
				<maxSize>0.36 0.22</maxSize>
			</image>

			<textlist name="gamelist">
				<selectorColor>340844</selectorColor>
				<selectedColor>FFFFFF</selectedColor>
				<primaryColor>964159</primaryColor>
				<secondaryColor>340844</secondaryColor>
				<fontPath>./_inc/fonts/Bauhaus-Medium.otf</fontPath>
				<pos>0.01 0.24</pos>
				<size>0.98 0.68</size>
				<fontSize>0.04</fontSize>
			</textlist>

	</view>

	<view name="detailed, video">
		
			<image name="logo">
				<origin>0.5 0.5</origin>
				<pos>0.22 0.12</pos>
				<maxSize>0.36 0.22</maxSize>
			</image>

			<textlist name="gamelist">
				<selectorColor>340844</selectorColor>
				<selectedColor>FFFFFF</selectedColor>
				<primaryColor>964159</primaryColor>
				<secondaryColor>340844</secondaryColor>
				<fontPath>./_inc/fonts/Bauhaus-Medium.otf</fontPath>
				<pos>0.04 0.24</pos>
				<size>0.36 0.68</size>
				<fontSize>0.04</fontSize>
				<horizontalMargin>0.01</horizontalMargin>
			</textlist>
		
		<image name="background_metadata" extra="true">
			<path>./_inc/images/mr_window.png</path>
			<origin>0 0</origin>
			<pos>0.72 0.06</pos>
			<size>0.236 0.563</size>
			<color>FFFFFFFF</color>
		</image>

			<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
				<color>FFFFFF</color>
				<forceUppercase>1</forceUppercase>
				<fontPath>./_inc/fonts/FSEX300.ttf</fontPath>
				<fontSize>0.033</fontSize>
				<size>0.24 0.01</size>
			</text>

			<text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
				<color>FFFFFF</color>
				<forceUppercase>0</forceUppercase>
				<fontPath>./_inc/fonts/Bauhaus-Medium.otf</fontPath>
				<fontSize>0.025</fontSize>
				<size>0.23 0.02</size>
			</text>
			<datetime name="md_releasedate, md_lastplayed">
				<color>FFFFFF</color>
				<forceUppercase>0</forceUppercase>
				<fontPath>./_inc/fonts/Bauhaus-Medium.otf</fontPath>
				<fontSize>0.025</fontSize>
				<size>0.23 0.02</size>
			</datetime>

				<text name="md_lbl_rating">
					<pos>0.748 0.11</pos>
				</text>
				<rating name="md_rating">
					<pos>0.758 0.13</pos>
					<size>0.23 0.03</size>
					<filledPath>./_inc/images/star_full.png</filledPath>
					<unfilledPath>./_inc/images/star_hollow.png</unfilledPath>
				</rating>

				<text name="md_lbl_players">
					<pos>0.748 0.18</pos>
				</text>
				<text name="md_players">
					<pos>0.758 0.20</pos>
				</text>

				<text name="md_lbl_genre">
					<pos>0.748 0.24</pos>
				</text>
				<text name="md_genre">
					<pos>0.758 0.26</pos>
				</text>

				<text name="md_lbl_developer">
					<pos>0.748 0.30</pos>
				</text>
				<text name="md_developer">
					<pos>0.758 0.32</pos>
				</text>

				<text name="md_lbl_publisher">
					<pos>0.748 0.36</pos>
				</text>
				<text name="md_publisher">
					<pos>0.758 0.38</pos>
				</text>

				<text name="md_lbl_releasedate">
					<pos>0.748 0.42</pos>
				</text>
				<datetime name="md_releasedate">
					<pos>0.758 0.44</pos>
				</datetime>

				<text name="md_lbl_playcount">
					<pos>0.748 0.48</pos>
				</text>
				<text name="md_playcount">
					<pos>0.758 0.50</pos>
				</text>

				<text name="md_lbl_lastplayed">
					<pos>0.748 0.54</pos>
				</text>
				<datetime name="md_lastplayed">
					<pos>0.758 0.56</pos>
				</datetime>
		
		<image name="background_description" extra="true">
			<path>./_inc/images/mr_window2.png</path>
			<origin>0 0</origin>
			<pos>0.442 0.654</pos>
			<size>0.5138 0.25</size>
			<color>FFFFFFFF</color>
		</image>

			<text name="md_description">
				<pos>0.466 0.682</pos>
				<size>0.476 0.195</size>
				<color>000000</color>
				<fontPath>./_inc/fonts/Bauhaus-Medium.otf</fontPath>
				<fontSize>0.028</fontSize>
				<alignment>left</alignment>
				<forceUppercase>0</forceUppercase>
				<lineSpacing>1.6</lineSpacing>
			</text>

	</view>

	<view name="detailed">

			<image name="md_image">
				<origin>0.5 0.5</origin>
				<pos>0.578 0.342</pos>
				<maxSize>0.26 0.563</maxSize>
			</image>
		
	</view>

	<view name="video">

		<video name="md_video">
			<pos>0.578 0.342</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.26 0.563</maxSize>
			<delay>2</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
		</video>

		<image name="md_marquee">
			<pos>0.578 0.122</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.25 0.18</maxSize>
		</image>

	</view>

</theme>
